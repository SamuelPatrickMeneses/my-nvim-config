{
  "semanticTokens.enable": true,
  "semanticTokens.highlightPriority" : 1,
  "coc.preferences.enableLinkedEditing": true,
  "colors.enable": false,
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server",
      "args": ["--lsp"],
      "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
      "filetypes": ["haskell", "lhaskell"],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true,
          "maxNumberOfProblems": 100,
          "semanticTokens": true
        }
      }
    },
     "ccls": {
         "command": "ccls",
         "filetypes": ["c", "cpp", "objc", "objcpp", "h", "hpp"],
         "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
         "initializationOptions": {
            "cache": {
              "directory": "${cwd}/.ccls-cache"
            },
            "clang": {
                "extraArgs": [
                    "-I",
                    "${cwd}",
                    "-std=c++17",
                    "-D",
                    "__linux__",
                    "-I",
                    "/home/samuel/extra/intel/oneapi/2025.2/include/"
                ]
            }
        }
     },
     "intelephense": {
         "command": "intelephense",
         "args": ["--stdio"],
         "filetypes": ["php"],
         "initializationOptions": {
             "storagePath": "/tmp/intelephense"
         }
     }
  },
  "java.imports.gradle.wrapper.checksums": [
    {
      "sha256": "76805e32c009c0cf0dd5d206bddc9fb22ea42e84db904b764f3047de095493f3",
      "allowed": true
    }
  ]
}
